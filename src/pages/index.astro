---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import Cover from "../components/Cover.astro";
import About from "../components/About.astro";
import HowToPlay from "../components/HowToPlay.astro";
import Footer from "../components/Footer.astro";
import ApiKeyConf from "../components/ApiKeyConf.astro";
import Header from "../components/Header.astro";
import Dialog from "../components/Dialog.astro";
import GhButton from "../components/ghButton.astro";
---

<Layout title="Agarra La Pala">
	<Header />
	<GhButton />
	<main class="w-full lg:px-40 flex flex-col justify-center gap-16">
		<Cover />
		<About />
		<HowToPlay />
		<Footer />
		<ApiKeyConf />
	</main>
	<Dialog />
</Layout>
<style is:global>
	:root {
		--primary: #497d8a;
	}
</style>
